<div class="form-inline">
    <div class="form-group">
        <label>{{ 'WIDTH' | translate }}</label>
        <input type="text"
               class="form-control"
               style="width: 80px"
               ng-model="resizeSelectedImage.width"
               placeholder="{{ 'MAX_WIDTH' | translate }}">
    </div>
    <div class="form-group">
        <label>{{ 'HEIGHT' | translate }}</label>
        <input type="text"
               class="form-control"
               style="width: 80px"
               ng-model="resizeSelectedImage.height"
               placeholder="{{ 'MAX_HEIGHT' | translate }}">
    </div>
</div>
<div class="clearfix" style="margin-top:5px;">
    <button class="btn btn-success pull-right"
            ng-click="resizeSelectedImage.ok(resizeSelectedImage.width, resizeSelectedImage.height)"
            type="button">
        <span class="glyphicon glyphicon-ok"></span>
    </button>
</div>
