                          popover-placement="bottom"
                          popover-trigger="outsideClick"></span>
                </p>
            </div>
        </div>
        <!-- Body -->
        <div title="{{sub.Name}}" ng-click="selectFolder(sub.Name)">
            <img ng-src="{{sub.Icon}}" />
        </div>
        <!-- Footer -->
        <div>
            <p class="text-center">{{sub.Name}}</p>
        </div>
    </div>
</script>

